{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block styleLog %}
    <link rel="stylesheet" href="{{ asset ("styles/create-fanart.styles.css")}}"
{% endblock %}

{% block body %}

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                <p>You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a></p>
            </div>
        {% endif %}

        <div class="container mt-5 mb-5">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-7 col-sm-7 col-8 contenu">
                    <h1 class="mb-4">Veuillez-vous connecter !</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="row justify-content-center mt-3 mb-3">
                        <button class="btn btn-lg btn-primary" type="submit">Sign in</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

{% endblock %}
