{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mb-5 mt-5">
    <div class="fanarttitle">
       <h1 class="mb-5">{{ fanArt.fanArtTitle }}</h1>
    </div>
    <div class="fanartimg">
        <img src="/uploads/images/{{ fanArt.fanArtSketch }}" alt="Sketch Fan-Art">
    </div>
        <div class="fanarthook">
        <h3 class="mb-5">{{ fanArt.fanArtHook }}</h3>
        </div>
    </div>

    <div class="col mt-3" style="text-align: center">
        {% if app.user %}
        <button class="btn btn-light btn-link"><a href="{{ path('dashboard_fanArts_update', {'id': app.user.id}) }}">Mettre à jour</a></button>
        {% endif %}
    </div>

    <div class="container formcomment mb-5 mt-5">

        <h3>Ajouter un commentaire : </h3>

        {{ form_start(commentForm) }}

        <div class="col-12 mt-3">
            {{ form_row(commentForm.comment_fan_art, {'attr': {class : "form-control"}}) }}
        </div>
        <div class="col-6 mt-3">
            {{ form_row(commentForm.ajouter, {'attr' : {class : "btn btn-primary"}}) }}
        </div>
        {{ form_end(commentForm) }}
    </div>

    <div class="container formcomment mb-5 mt-5">
        <h3>Commentaires : </h3>
        {% for comment in comments %}
            <div>
                {{ comment.commentFanArt }}
            </div>
            <div>
                <p>Publié par {{ comment.userId.pseudo }}</p>
            </div>
        {% endfor %}
    </div>

{% endblock %}