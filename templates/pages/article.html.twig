{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mb-5 mt-5">
        <div class="articletitle">
            <h1 class="mb-5">{{ article.articleTitle }}</h1>
        </div>
        <div class="articletext">
            <h3 class="mb-5">{{ article.articleText }}</h3>
        </div>
    </div>

    <div class="col mt-3" style="text-align: center">
            {%  for author in article.authors %}
                <a href="{{ path('author', {id : author.id}) }}">  <p>{{ author.authorName }}</p></a>
            {% endfor %}


    {% if app.user %}
        <button class="btn btn-light btn-link"><a href="{{ path('dashboard_articles_update', {slug : article.slug}) }}">Modifier</a></button>
    {% endif %}

    </div>

    <div class="container formcomment mb-5 mt-5">

        <h3>Ajouter un commentaire : </h3>

        {{ form_start(commentForm) }}

                <div class="col-12 mt-3">
                    {{ form_row(commentForm.comment_article, {'attr': {class : "form-control"}}) }}
                </div>
                <div class="col-6 mt-3">
                    {{ form_row(commentForm.valider, {'attr' : {class : "btn btn-primary"}}) }}
                </div>
        {{ form_end(commentForm) }}
    </div>



    <div class="container formcomment mb-5 mt-5">

        <h3>Commentaires : </h3>

        {% for comment in comments %}

            <div>
                {{ comment.commentArticle }}
            </div>

            <div>
                <p>Publi√© par {{ comment.userId.pseudo }}</p>
            </div>
        {% endfor %}

    </div>



{% endblock %}