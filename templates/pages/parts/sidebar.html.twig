{% block styleSide %}
    <link rel="stylesheet" href="{{ asset ("styles/sidebar.styles.css")}}">
{% endblock %}

<div class="sideBar">

    {% if app.user %}

    {% if app.request.get('_route') == 'fanArts' %}

        <a href="{{ path('dashboard_fanArts_create', { id: app.user.id })}}">Créer un fan-art</a>

    {% else %}

        <a href="{{ path('dashboard_articles_create', {id: app.user.id}) }}">Créer un article</a>

        {% for author in authors %}
            <li><a href="{{ path('author', {'id': 'author.id'}) }}">{{ author.authorName }}</a></li>

        {% endfor %}

    {% endif %}

    {% endif %}


</div>