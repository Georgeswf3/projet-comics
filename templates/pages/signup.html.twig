{% extends 'base.html.twig' %}

{% block styleSignUp %}
    <link rel="stylesheet" href="{{ asset ("styles/create-fanart.styles.css")}}">
{% endblock %}

{% block body %}
 
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-7 col-sm-9 col-9 contenu">
                <h1>Inscription</h1>
                {{ form_start(userForm) }}

                    {{ form_row(userForm.first_name, {'attr': {class : "form-control"}}) }} 
                    {{ form_row(userForm.last_name, {'attr': {class : "form-control"}}) }}
                    {{ form_row(userForm.pseudo, {'attr': {class : "form-control"}}) }}
                    {{ form_row(userForm.email, {'attr': {class : "form-control"}}) }}   
                    {{ form_row(userForm.password, {'attr' : {class : "form-control"}}) }} 
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-8">
                            {{ form_row(userForm.avatar_image) }}
                            </div>
                            <div class="col-4 mb-5">
                            {{ form_row(userForm.valider, {'attr' : {class : "btn btn-primary"}}) }}
                            </div> 
                        </div>
                    </div>

                {{ form_end(userForm) }}
                    
            </div>
        </div>
    </div>

{% endblock %}