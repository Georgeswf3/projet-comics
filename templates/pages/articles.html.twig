{% extends "base.html.twig" %}

{% block body %}

    {% for article in articles %}
        <p>{{ article.articleTitle }}</p>
        <p>{{ article.articleText }}</p>
        {# <p>{{ article.articleDate }}</p> #}
    {% endfor %}

    <div class="row justify-content-around">
        <div class="col-3">
            {% if from > 1 %}
                <a href="{{path('articles', {from : from - 1}) }}"><h3>Précédent</h3></a>
            {% endif %}
        </div>
        <div class="col-3">
            <a style="text-align: end" href="{{ path('articles', {from : from + 1}) }}"><h3>Suivant</h3></a>
        </div>
    </div>

{% endblock %}