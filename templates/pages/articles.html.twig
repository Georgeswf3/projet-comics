{% extends "base.html.twig" %}

{% block styleFanArts %}
    <link rel="stylesheet" href="{{ asset ("styles/fanarts.styles.css")}}">
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                {% include "pages/parts/sidebar.html.twig" %}
            </div>

            <div class="col-10">
                <div class="row justify-content-center col-auto mt-4">
                    {% for article in articles %}
                        <div class="elements mt-3 ml-4">
                            <p>{{ article.articleTitle }}</p>
                            <div class="text">
                                <p>{{ article.articleText }}</p>
                            </div>
                            <a href="{{ path("article", {slug : article.slug}) }}" class="btn btn-secondary">Voir</a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}