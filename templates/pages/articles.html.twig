{% extends "base.html.twig" %}

{% block styleFanArts %}
    <link rel="stylesheet" href="{{ asset ("styles/fanarts.styles.css")}}">
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-3 mt-4" style="background: #101fff; border-right: 3px solid">
                {% include "pages/parts/sidebar.html.twig" %}
            </div>

            <div class="col-9">
                <div class="row justify-content-center mt-4 mb-4">
                    {% for article in articles %}
                        <div class="col-md-4 p-2">
                        <div class="elements">
                            <p>{{ article.articleTitle }}</p>
                            <div class="text">
                                <p>{{ article.articleText|length > 30 ? article.articleText(0, 30) ~ '...' : article.articleText }}</p>
                            </div>
                            <a href="{{ path("article", {slug : article.slug}) }}" class="btn btn-secondary">Voir</a>
                        </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="container mt-3 mb-5">
                <div class="row">
                    <div class="col-6">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-4">
                                    {% if from > 1 %}
                                        <a href="{{path('articles', {from : from - 1}) }}" class="btn-lg btn-dark">Précédent</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-4">
                                    <a href="{{ path('articles', {from : from + 1}) }}" class="btn-lg btn-dark buttons">Suivant</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}