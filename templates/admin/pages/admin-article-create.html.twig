{% extends '/base.html.twig' %}

{% block body %}
    <h1 class="mt-5">Cr√©er un article : </h1>


    {{ form_start(articleForm) }}
    <div class="form-group mt-5">
        <div class="row">
            <div class="col-2">
                {{ form_row(articleForm.article_title, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4">
                {{ form_row(articleForm.article_text, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-12">
                {{ form_row(articleForm.article_date, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-12">
                {{ form_row(articleForm.isConfirmed, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4 mt-5">
                {{ form_row(articleForm.ajouter, {'attr' : {class : "btn btn-primary"}}) }}
            </div>

        </div>
    </div>


    {{ form_end(articleForm) }}

{% endblock %}