{% extends '/base.html.twig' %}

{% block body %}
    <h1 class="mt-5">Modifier un article : </h1>


    {{ form_start(articleUpdateForm) }}
    <div class="form-group mt-5">
        <div class="row">
            <div class="col-2 mt-5">
                {{ form_row(articleUpdateForm.article_title, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4 mt-5">
                {{ form_row(articleUpdateForm.article_text, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-12 mt-5">
                {{ form_row(articleUpdateForm.article_date, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-12 mt-5">
                {{ form_row(articleUpdateForm.isConfirmed, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4 mt-5">
                {{ form_row(articleUpdateForm.ajouter, {'attr' : {class : "btn btn-primary"}}) }}
            </div>

        </div>
    </div>


    {{ form_end(articleUpdateForm) }}

{% endblock %}