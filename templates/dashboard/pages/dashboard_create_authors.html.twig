{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="mt-5">Ajouter un auteur : </h1>


    {{ form_start(authorForm) }}
    <div class="form-group mt-5">
        <div class="row">
            <div class="col-12 mt-5">
                {{ form_row(authorForm.author_name, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-12 mt-5">
                {{ form_row(authorForm.ajouter, {'attr' : {class : "btn btn-primary"}}) }}
            </div>
        </div>
    </div>


    {{ form_end(authorForm) }}



{% endblock %}