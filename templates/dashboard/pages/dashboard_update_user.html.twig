{% extends 'base.html.twig' %}

{% block styleCreateFanArt %}
    <link rel="stylesheet" href="{{ asset ("styles/create-fanart.styles.css")}}">
{% endblock %}

{% block body %}

    <div class="container align-items-center mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-sm-9 contenu">
                <h1 class="mt-5">Modifier profil : </h1>


                {{ form_start(userUpdateForm) }}
                <div class="form-group mt-4">
                    {{ form_row(userUpdateForm.email, {'label':'Email','attr': {class : "form-control"}}) }}
                    {{ form_row(userUpdateForm.password, {'label':'Mot de passe','attr': {class : "form-control"}}) }}
                    {{ form_row(userUpdateForm.pseudo, {'label':'Pseudo','attr': {class : "form-control"}}) }}
                    <div class="row justify-content-around mt-3 mb-3">
                        {{ form_row(userUpdateForm.valider, {'attr' : {class : "btn btn-primary"}}) }}
                    </div>
                </div>
                {{ form_end(userUpdateForm) }}
            </div>
        </div>
    </div>

{% endblock %}