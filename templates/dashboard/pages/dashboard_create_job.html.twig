{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="mt-5">Choisissez le job de l'artiste : </h1>


    {{ form_start(jobForm) }}
    <div class="form-group mt-5">
        <div class="row">
            <div class="col-4 mt-5">
                {{ form_row(jobForm.job_writer, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4 mt-5">
                {{ form_row(jobForm.job_penciler, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4 mt-5">
                {{ form_row(jobForm.job_inker, {'attr': {class : "form-control"}}) }}
            </div>
        </div>
    </div>


    {{ form_end(jobForm) }}



{% endblock %}